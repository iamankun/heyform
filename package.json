{
  "name": "heyform",
  "homepage": "https://heyform-webapp.vercel.app",
  "author": "An Kun.",
  "license": "AGPL-3.0",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "run-p dev:webapp dev:server",
    "dev:webapp": "pnpm --filter ./packages/webapp dev",
    "dev:server": "pnpm --filter ./packages/server dev",
    "dev:todos": "pnpm --filter ./packages/webapp dev --port 3000",
    "build": "node build-vercel.js",
    "build:webapp": "pnpm --filter ./packages/webapp build",
    "build:server": "pnpm --filter ./packages/server build",
    "build:deps": "pnpm --filter ./packages/utils build && pnpm --filter ./packages/shared-types-enums build && pnpm --filter ./packages/answer-utils build",
    "db:migrate": "pnpm --filter ./packages/server db:migrate",
    "db:studio": "pnpm --filter ./packages/server db:studio",
    "setup:env": "node scripts/setup-env.js",
    "env:pull": "vercel env pull .env.development.local",
    "env:pull:production": "vercel env pull .env.production.local --environment=production",
    "db:neon:migrate": "node scripts/neon-migrate.js",
    "db:neon:seed": "node scripts/neon-seed.js",
    "deploy:neon": "vercel --prod && pnpm run db:neon:migrate",
    "health:neon": "curl -f http://localhost:3001/api/health/neon || echo 'Health check failed'",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean-lockfile": "node scripts/clean-lockfile.js",
    "prebuild": "pnpm run clean-lockfile",
    "fresh-install": "pnpm run clean && pnpm run clean-lockfile && pnpm install --no-frozen-lockfile",
    "fix-install": "node scripts/fix-install.js",
    "preinstall": "npx only-allow pnpm",
    "init:stack-auth": "node scripts/init-stack-auth.js",
    "test:auth": "node -e \"console.log('Testing Stack Auth...'); require('./packages/server/src/lib/stack-auth.ts')\"",
    "test:db": "node -e \"console.log('Testing Database...'); require('./packages/server/src/actions/actions.ts').then(m => m.testDatabaseConnection())\"",
    "migrate:todos": "node scripts/neon-migrate.js",
    "seed:todos": "node scripts/seed-todos.js",
    "fix-ci": "node scripts/fix-ci.js",
    "ci:install": "pnpm install --frozen-lockfile=false --ignore-engines",
    "ci:build": "pnpm run build:deps && pnpm run build:webapp",
    "ci:test": "pnpm run type-check && pnpm run lint"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "axios": "1.6.8",
    "@neondatabase/serverless": "^0.9.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "pnpm": {
    "overrides": {
      "axios": "1.6.8",
      "lodash": "4.17.21",
      "typescript": "4.9.5"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ],
      "allowedVersions": {
        "react": "18.x",
        "react-dom": "18.x"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ]
}