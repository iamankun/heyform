{
  "name": "heyform",
  "description": "HeyForm is an open-source form builder that allows anyone to create engaging conversational forms",
  "homepage": "https://heyform.net",
  "author": "Heyooo, Inc.",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "build": "cd packages/webapp && npm run build",
    "dev": "cd packages/webapp && npm run dev",
    "start": "cd packages/webapp && npm run start",
    "lint": "cd packages/webapp && npm run lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/.next",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}