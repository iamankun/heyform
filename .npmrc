# Generated by An Kun

# Use pnpm for package management
package-manager=pnpm

# Disable strict peer dependencies to avoid conflicts
strict-peer-dependencies=false

# Enable shamefully-hoist to resolve dependency issues
shamefully-hoist=true

# Node.js and pnpm version constraints
engine-strict=false
node-version-check=false

# Registry configuration
registry=https://registry.npmjs.org/

# Cache configuration
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# Logging
loglevel=warn

# Auto install peer dependencies
auto-install-peers=true

# Enable dedupe to reduce disk space
dedupe-peer-dependents=true

# Resolve workspace dependencies
link-workspace-packages=true

# Allow any Node.js version for CI
ignore-engines=true
