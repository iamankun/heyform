{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
    "importHelpers": true,
    "resolveJsonModule": true,
		"moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": [
    "coverage",
    "lib",
    "node_modules"
  ]
}
